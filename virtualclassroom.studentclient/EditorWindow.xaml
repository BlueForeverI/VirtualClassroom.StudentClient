<Window x:Class="VirtualClassroom.StudentClient.EditorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:TeacherClient="clr-namespace:VirtualClassroom.StudentClient" 
        Title="Editor" SizeToContent="WidthAndHeight" 
        Background="{DynamicResource WindowBackgroundBrush}" 
        Topmost="True" ShowInTaskbar="False" ResizeMode="NoResize" 
        WindowStartupLocation="CenterScreen">
    <Window.Resources>
    </Window.Resources>
    <Grid>
        <StackPanel>
            <TeacherClient:DocumentEditor x:Name="docEditor" />
            <Button x:Name="btnAddContent" Click="btnAddContent_Click" Width="120" >Add Content</Button>
        </StackPanel>
    </Grid>
</Window>
